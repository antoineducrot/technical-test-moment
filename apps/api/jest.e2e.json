{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "setupFilesAfterEnv": ["./e2e/setup-tests.e2e.ts"],
  "testEnvironment": "node",
  "testRegex": ".e2e.test.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/src/$1"
  },
  "testTimeout": 30000
}
