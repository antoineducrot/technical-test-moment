FROM dpage/pgadmin4

ENV PGADMIN_DEFAULT_EMAIL=${PGADMIN_DEFAULT_EMAIL}
ENV PGADMIN_DEFAULT_PASSWORD=${PGADMIN_DEFAULT_PASSWORD}
ENV PGADMIN_CONFIG_SERVER_MODE=False
ENV PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED=${PGADMIN_PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED}

COPY docker/pg-admin/servers.json /pgadmin4/servers.json

ENTRYPOINT ["/entrypoint.sh"]

EXPOSE 80